<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Travelled.Tovisit"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <StackLayout>

            <Entry
                VerticalOptions="Center"
                    x:Name="ToVisit"
                    Placeholder="Where do you wanna go?"/>
            
                <Button
                    VerticalOptions="End"
                    HorizontalOptions="Center"
                    FontSize="Header"
                    Clicked="FeelLuckyClicked"
                    Text="I feel lucky!" />

            <Grid ColumnDefinitions="2*,2*" RowDefinitions="2*, 2*, 2*">
                <Button
                    Grid.Row="10"
                    Grid.Column="0"
                    FontSize="Header"
                    Clicked="OnActionSheetSimpleClicked"
                    Text="Share" />

                <Button
                    Grid.Row="10"
                    Grid.Column="1"
                    FontSize="Header"
                    Clicked="CreditsButtonClicked"
                    Text="Credits" />
            </Grid>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>