<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Travelled.Tovisit"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <StackLayout>
            
            <Grid ColumnDefinitions="2*,2*" RowDefinitions="2*, 2*, 2*">

                <Button
                    Grid.Row="2"
                    Grid.Column="0"
                    Clicked="OnActionSheetSimpleClicked"
                    Text="Share" />

                <Button
                    Grid.Row="2"
                    Grid.Column="1"
                    Clicked="Credits_Button_Clicked"
                    Text="Credits" />
            </Grid>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>